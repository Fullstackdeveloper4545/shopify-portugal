{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} .home-promos__grid {
    display: grid;
    gap: 32px;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .section-{{ section.id }} .home-promos__card {
    position: relative;
    border-radius: 32px;
    overflow: hidden;
    min-height: 320px;
    background-color: #000;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
  }

  .section-{{ section.id }} .home-promos__card img {
    display: none;
  }

  .section-{{ section.id }} .home-promos__card:nth-child(1) {
    background-image: url({{ 'assets/image1.jpg' | asset_url }});
  }

  .section-{{ section.id }} .home-promos__card:nth-child(2) {
    background-image: url({{ 'assets/image2.png' | asset_url }});
  }

  .section-{{ section.id }} .home-promos__card:nth-child(3) {
    background-image: url({{ 'assets/image3.jpg' | asset_url }});
  }

  .section-{{ section.id }} .home-promos__card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0.6) 70%, #f76b1c 100%);
    mix-blend-mode: multiply;
  }

  .section-{{ section.id }} .home-promos__content {
    position: absolute;
    inset: 0;
    padding: var(--gb-space-24);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: var(--gb-space-12);
    color: #fff;
    z-index: 1;
  }

  .section-{{ section.id }} .home-promos__content h3 {
    margin: 0;
    font-size: 24px;
    line-height: 1.3;
    font-weight: 600;
  }

  .section-{{ section.id }} .home-promos__content p {
    margin: 0;
    font-size: 16px;
  }

  .section-{{ section.id }} .home-promos__content .gb-btn {
    width: 150px;
    background: #ff6701;
    border-radius: 24px;
    text-transform: none;
    font-weight: 600;
  }

  @media (max-width: 749px) {
    .section-{{ section.id }} .home-promos__grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="home-promos section-space section-{{ section.id }}">
  <div class="page-width">
    <div class="home-promos__grid">
      {% for block in section.blocks %}
        <article class="home-promos__card" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
          {% elsif block.settings.fallback_image != blank %}
            <img src="{{ block.settings.fallback_image | asset_url }}" alt="{{ block.settings.heading | escape }}" loading="lazy">
          {% endif %}
          <div class="home-promos__content">
            {% if block.settings.heading != blank %}
              <h3>{{ block.settings.heading }}</h3>
            {% endif %}
            {% if block.settings.subheading != blank %}
              <p>{{ block.settings.subheading }}</p>
            {% endif %}
            {% if block.settings.button_label != blank %}
              <a class="gb-btn" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

